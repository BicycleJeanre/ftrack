{
  "name": "ftrack",
  "version": "0.7.1-beta",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=9229 --remote-debugging-port=9222",
    "docs:manifest": "node scripts/generate-docs-manifest.mjs",
    "prebuild": "npm run docs:manifest",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "qc:verify": "node QC/verify.js --scenario=General",
    "qc:verify:all": "node QC/verify.js --all",
    "qc:verify:budget": "node QC/verify.js --scenario=Budget",
    "qc:verify:funds": "node QC/verify.js --scenario=Funds",
    "qc:verify:debt": "node QC/verify.js --scenario=Debt Repayment",
    "qc:verify:goals": "node QC/verify.js --scenario=Goal-Based",
    "qc:verify:solver": "node QC/verify.js --scenario=Advanced Goal Solver",
    "qc:verify:verbose": "node QC/verify.js --scenario=General --verbose",
    "qc:test": "node QC/run-tests.js",
    "qc:test:calculation-utils": "node QC/run-calculation-utils.js",
    "qc:test:financial-utils": "node QC/run-financial-utils.js",
    "qc:test:date-utils": "node QC/run-date-utils.js",
    "qc:test:transaction-expander": "node QC/run-transaction-expander.js",
    "qc:test:projection-engine": "node QC/run-projection-engine.js",
    "qc:test:periodic-change-utils": "node QC/run-periodic-change-utils.js",
    "qc:test:lookup-data": "node QC/run-lookup-data.js",
    "qc:test:qc-data": "node QC/run-qc-data.js",
    "qc:test:budget": "node QC/tests/scenario-types/budget.test.js",
    "qc:test:general": "node QC/tests/scenario-types/general.test.js",
    "qc:test:funds": "node QC/tests/scenario-types/funds.test.js",
    "qc:test:debt": "node QC/tests/scenario-types/debt-repayment.test.js",
    "qc:test:goal-based": "node QC/tests/scenario-types/goal-based.test.js",
    "qc:test:advanced-goal-solver": "node QC/tests/scenario-types/advanced-goal-solver.test.js",
    "qc:test:all-scenario-types": "npm run qc:test:budget && npm run qc:test:general && npm run qc:test:funds && npm run qc:test:debt && npm run qc:test:goal-based && npm run qc:test:advanced-goal-solver",
    "qc:full": "node QC/generate-qc-report.js",
    "qc:expand": "node QC/generators/expand-qc-dataset.js",
    "qc:report": "node QC/generate-qc-report.js",
    "qc:report:output": "node QC/generate-qc-report.js --output",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "finance",
    "budget",
    "forecast",
    "planning"
  ],
  "author": "BicycleJeanre",
  "license": "MIT",
  "description": "FTrack - Financial Tracking and Forecasting Application",
  "build": {
    "appId": "com.bicyclejeanre.ftrack",
    "productName": "FTrack",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "pages/**/*",
      "js/**/*",
      "Documentation/**/*",
      "styles/**/*",
      "assets/*.json",
      "!assets/app-data.json",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance",
      "icon": "assets/icon.icns",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "financejs": "^4.1.0",
    "javascript-lp-solver": "^0.4.24",
    "tabulator-tables": "^6.3.1"
  }
}
