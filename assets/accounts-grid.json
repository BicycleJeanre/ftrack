{
  "mainGrid": {
    "columns": [
      { "field": "name", "header": "Account Name", "editable": true, "type": "text" },
      { "field": "type", "header": "Type", "editable": true, "type": "select", "options": ["asset", "liability", "equity", "income", "expense"], "default": "asset" },
      { "field": "balance", "header": "Starting Balance", "editable": true, "type": "number" },
      { "field": "current_balance", "header": "Current Balance", "editable": false, "type": "number" },
      { "field": "interest", "header": "Interest", "editable": false, "type": "modal", "modalId": "interestModal", "modalIcon": "edit", "modalIconTitle": "Edit Interest" }
    ]
  },
  "interestModal": {
    "title": "Edit Interest Settings",
    "dataField": "interest_data",
    "actions": { "add": true, "edit": true, "delete": true },
    "columns": [
      { "field": "presetOption", "header": "Standard Calculation", "editable": true, "type": "select", "options": [
        "Custom",
        "NACM (Compounded Monthly)",
        "NACQ (Compounded Quarterly)",
        "NACA (Compounded Annually)",
        "NACW (Compounded Weekly)",
        "NACD (Compounded Daily)"
      ], "default": "Custom" },
      { "field": "nominalRate", "header": "Nominal Annual Rate (%)", "editable": true, "type": "number", "default": 0 },
      { "field": "effectiveRate", "header": "Effective Annual Rate (EAR) (%)", "editable": true, "type": "number", "default": 0 },
      { "field": "nominalRatePeriod", "header": "Nominal Rate Period", "editable": true, "type": "select", "options": ["Annually", "Monthly", "Quarterly", "Weekly", "Daily"], "default": "Annually" },
      { "field": "calculationMethod", "header": "Calculation Method", "editable": true, "type": "select", "options": ["Compound", "Simple"], "default": "Simple" },
      { "field": "compoundingInterval", "header": "Compounding Interval", "editable": true, "type": "select", "options": ["Monthly", "Quarterly", "Annually", "Weekly", "Daily"], "default": "Monthly" }
    ]
  }
}
