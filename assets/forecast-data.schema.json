{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ForecastData",
  "type": "object",
  "properties": {
    "accounts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "balance": { "type": "number" },
          "interest": { "type": "number" }
        },
        "required": ["name", "balance", "interest"]
      }
    },
    "transactions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "account": { "type": "string" },
          "amount": { "type": "number" },
          "date": { "type": "string", "format": "date" },
          "recurring": { "type": "boolean" },
          "end_date": { "type": ["string", "null"], "format": "date" },
          "freq": { "type": "string" },
          "pct_change": { "type": "number" },
          "apply_to": { "type": "string" }
        },
        "required": []
      }
    },
    "forecastResults": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "period": { "type": "string" },
          "accounts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "balance": { "type": "string" }
              },
              "required": ["name", "balance"]
            }
          }
        },
        "required": ["period", "accounts"]
      }
    }
  },
  "required": ["accounts", "transactions", "forecastResults"]
}
