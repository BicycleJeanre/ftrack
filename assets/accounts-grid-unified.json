{
  "mainGrid": {
    "columns": [
      {
        "field": "name",
        "header": "Account Name",
        "type": "text",
        "editable": true,
        "required": true
      },
      {
        "field": "type",
        "header": "Type",
        "type": "select",
        "editable": true,
        "required": true,
        "optionsSource": "accountTypes"
      },
      {
        "field": "currency",
        "header": "Currency",
        "type": "select",
        "editable": true,
        "required": true,
        "optionsSource": "currencies"
      },
      {
        "field": "balance",
        "header": "Opening Balance",
        "type": "number",
        "editable": true,
        "default": 0
      },
      {
        "field": "openDate",
        "header": "Open Date",
        "type": "date",
        "editable": true,
        "required": true
      },
      {
        "field": "periodicChange",
        "header": "Periodic Change",
        "type": "modal",
        "editable": true,
        "modal": "periodicChangeModal",
        "modalIcon": "trending",
        "modalIconTitle": "Edit Periodic Change",
        "visibleWhen": "scenario.type.name IN ['Budget', 'General', 'Funds']"
      }
    ],
    "actions": {
      "add": true,
      "edit": true,
      "delete": true,
      "save": true,
      "showSelector": true
    }
  },
  "periodicChangeModal": {
    "title": "Periodic Change",
    "actions": {
      "add": false,
      "edit": true,
      "delete": false,
      "save": true
    },
    "columns": [
      {
        "field": "changeMode",
        "header": "Change Mode",
        "type": "select",
        "editable": true,
        "optionsSource": "changeModes",
        "default": "Percentage Rate"
      },
      {
        "field": "changeType",
        "header": "Change Type",
        "type": "select",
        "editable": true,
        "optionsSource": "periodicChangeTypes",
        "visibleWhen": "changeMode.name == 'Percentage Rate'",
        "default": "Nominal Annual (No Compounding)"
      },
      {
        "field": "value",
        "header": "Value",
        "type": "number",
        "editable": true,
        "default": 0
      },
      {
        "field": "period",
        "header": "Per Period",
        "type": "select",
        "editable": true,
        "optionsSource": "frequencies",
        "visibleWhen": "changeMode.name == 'Fixed Amount'",
        "default": "Monthly"
      },
      {
        "field": "ratePeriod",
        "header": "Rate Period",
        "type": "select",
        "editable": true,
        "optionsSource": "ratePeriods",
        "visibleWhen": "changeType.name == 'Custom'",
        "default": "Annual"
      },
      {
        "field": "frequency",
        "header": "Compounding Frequency",
        "type": "select",
        "editable": true,
        "optionsSource": "frequencies",
        "visibleWhen": "changeType.name == 'Custom'",
        "default": "Monthly"
      }
    ]
  },
  "accountTypes": [
    { "id": 1, "name": "Asset" },
    { "id": 2, "name": "Liability" },
    { "id": 3, "name": "Equity" },
    { "id": 4, "name": "Income" },
    { "id": 5, "name": "Expense" }
  ],
  "currencies": [
    { "id": 1, "name": "ZAR" },
    { "id": 2, "name": "USD" },
    { "id": 3, "name": "EUR" },
    { "id": 4, "name": "GBP" }
  ],
  "periodicChangeTypes": [
    { "id": 1, "name": "Nominal Annual (No Compounding)" },
    { "id": 2, "name": "Nominal Annual, Compounded Monthly" },
    { "id": 3, "name": "Nominal Annual, Compounded Daily" },
    { "id": 4, "name": "Nominal Annual, Compounded Quarterly" },
    { "id": 5, "name": "Nominal Annual, Compounded Annually" },
    { "id": 6, "name": "Nominal Annual, Continuous Compounding" },
    { "id": 7, "name": "Custom" }
  ],
  "changeModes": [
    { "id": 1, "name": "Percentage Rate" },
    { "id": 2, "name": "Fixed Amount" }
  ],
  "ratePeriods": [
    { "id": 1, "name": "Annual" },
    { "id": 2, "name": "Monthly" },
    { "id": 3, "name": "Quarterly" },
    { "id": 4, "name": "Daily" }
  ],
  "frequencies": [
    { "id": 1, "name": "Daily" },
    { "id": 2, "name": "Weekly" },
    { "id": 3, "name": "Monthly" },
    { "id": 4, "name": "Quarterly" },
    { "id": 5, "name": "Yearly" }
  ]
}
