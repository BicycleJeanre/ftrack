        "display": true
      },
      {
        "field": "startDate",
        "header": "Start Date",
        "editable": true,
        "type": "date",
        "display": true
      },
      {
        "field": "endDate",
        "header": "End Date",
        "editable": true,
        "type": "date",
        "display": true
      },
      {
        "field": "periodType",
        "header": "Period Type",
        "editable": true,
        "type": "select",
        "optionsSource": "periodTypes",
        "default": "Month",
        "display": true
      },
      {
        "field": "periodCount",
        "header": "Period Count",
        "editable": true,
        "type": "number",
        "display": true
      },
      {
        "field": "accounts",
        "header": "Accounts",
        "editable": true,
        "type": "select",
        "optionsSource": "accounts",
