        "display": true
      },
      {
        "field": "notes",
        "header": "Notes",
        "editable": true,
        "type": "text",
        "display": true
      },
      {
        "field": "tags",
        "header": "Tags",
        "editable": true,
        "type": "tags",
        "display": true
      }
    ]
