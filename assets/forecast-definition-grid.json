{
  "mainGrid": {
    "actions": {
      "add": true,
      "edit": true,
      "delete": true,
      "save": true
    },
    "columns": [
      {
        "field": "id",
        "header": "ID",
        "editable": false,
        "type": "number",
        "display": false
      },
      {
        "field": "name",
        "header": "Name",
        "editable": true,
        "type": "text",
        "display": true
      },
      {
        "field": "mode",
        "header": "Mode",
        "editable": true,
        "type": "select",
        "optionsSource": "forecastModes",
