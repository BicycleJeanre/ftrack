{
    "mainGrid": {
        "actions": {
            "add": true,
            "edit": true,
            "delete": true,
            "save": true
        },
        "columns": [
            {
                "field": "id",
                "header": "ID",
                "editable": false,
                "type": "number",
                "display": false
            },
            {
                "field": "debit_account",
                "header": "Debit Account",
                "editable": true,
                "type": "select",
                "optionsSource": "accounts",
                "customDisplay": {"displayText": "accounts.name", "join": "transactions.debit_account.id = accounts.id"},
                "default": "",
                "display": true
            },
            {
                "field": "credit_account",
                "header": "Credit Account",
                "editable": true,
                "type": "select",
                "optionsSource": "accounts",
                "customDisplay": {"displayText": "accounts.name",  "join": "transactions.debit_account.id = accounts.id"},
                "default": "",
                "display": true
            },
            {
                "field": "amount",
                "header": "Amount",
                "editable": true,
                "type": "number",
                "default": 0,
                "display": true
            },
            {
                "field": "isRecurring",
                "header": "Recurring?",
                "editable": true,
                "type": "checkbox",
                "default": false,
                "display": true
            },
            {
                "field": "recurrence",
                "header": "Recurrence",
                "editable": true,
                "type": "modal",
                "modal": "recurrenceModal",
                "modalIcon": "edit",
                "modalIconTitle": "Edit Recurrence",
                "default": [],
                "display": true
            },
            {
                "field": "amountChange",
                "header": "Amount Change",
                "editable": true,
                "type": "modal",
                "modal": "amountChangeModal",
                "modalIcon": "edit",
                "modalIconTitle": "Edit Amount Change",
                "default": [],
                "display": true
            },
            {
                "field": "tags",
                "header": "Tags",
                "editable": true,
                "type": "tags",
                "default": [],
                "display": true
            }
        ]
    },
    "recurrenceModal": {
        "title": "Edit Transaction Recurrence",
        "dataField": "recurrence",
        "actions": {
            "add": false,
            "edit": true,
            "delete": true,
            "save": true
        },
        "columns": [
            {
                "field": "id",
                "header": "ID",
                "editable": false,
                "type": "number",
                "display": false
            },
            {
                "field": "frequency",
                "header": "Frequency",
                "type": "select",
                "optionsSource": "recurrenceFrequencies",
                "display": true,
                "editable": true
            },
            {
                "field": "endDate",
                "header": "End Date",
                "type": "date",
                "display": true,
                "editable": true
            },
            {
                "field": "dayOfMonth",
                "header": "Day of Month",
                "type": "number",
                "display": true,
                "editable": true
            }
        ]
    },
    "amountChangeModal": {
        "actions": {
            "add": false,
            "edit": true,
            "delete": true,
            "save": true
        },
        "columns": [
            {
                "field": "changeType",
                "header": "Change Type",
                "type": "select",
                "optionsSource": "amountChangeTypes",
                "display": true,
                "editable": true
            },
            {
                "field": "changeValue",
                "header": "Change Value",
                "type": "number",
                "display": true,
                "editable": true
            },
            {
                "field": "changeFrequency",
                "header": "Change Frequency",
                "type": "select",
                "optionsSource": "amountChangeFrequencies",
                "display": true,
                "editable": true
            },
            {
                "field": "startDate",
                "header": "Start Date",
                "type": "date",
                "display": true,
                "editable": true
            },
            {
                "field": "endDate",
                "header": "End Date",
                "type": "date",
                "display": true,
                "editable": true
            },
            {
                "field": "notes",
                "header": "Notes",
                "type": "text",
                "display": true,
                "editable": true
            }
        ]
    },
    "recurrenceFrequencies": [
        "Daily",
        "Monthly",
        "Weekly",
        "Yearly"
    ],
    "amountChangeTypes": [
        "percentage",
        "fixed"
    ],
    "amountChangeFrequencies": [
        "Yearly",
        "Monthly",
        "Quarterly",
        "Weekly",
        "Daily"
    ]
}